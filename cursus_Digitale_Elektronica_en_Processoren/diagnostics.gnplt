#!/usr/bin/gnuplot

set xdata time
set timefmt '%s'
set xlabel 'time'
set xtics 604800

set term pdf size 40cm,40cm
set output 'diagnostics.pdf'

set multiplot layout 2, 2 title "Cursus DEP - review Diagnostics"

set title "Errors in time"
plot 'stats.stat' u 1:2 w lines t "Errors", 700-(x-497746800)/6048 t "Threshold"

set title "Warnings in time"
plot 'stats.stat' u 1:3 w lines t "Warnings", 800-1.1428*(x-497746800)/6048 t "Threshold"

set title "Missing labels in time"
plot 'stats.stat' u 1:4 w lines t "Missing labels", 550-0.787*(x-497746800)/6048 t "Threshold"

set title "Glossary entries in time"
plot 'stats.stat' u 1:5 w lines t "Glossary entries", 1.28*(x-497746800)/6048 t "Threshold"

unset multiplot
